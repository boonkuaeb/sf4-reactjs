<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0">

    <title>{% block title %}Symfony4 vs ReactJS!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="manifest" href="{{ asset('build/manifest.json') }}">
        <link href="{{ asset('build/layout.css') }}" rel="stylesheet"/>
    {% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
<noscript>
    You need to enable JavaScript to run this app.
</noscript>
{{ include('_top_nav.html.twig') }}

{% block hero %}{% endblock %}
<div class="container main-content">
    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="flash-{{ type }} alert alert-info">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {% block body %}{% endblock %}

    <footer class="footer">
        <hr/>
    </footer>
</div>
<!-- /container -->
</div>
{% block javascripts %}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script src="{{ asset('build/manifest.js') }}"></script>
    <script src="{{ asset('build/layout.js') }}"></script>
{% endblock %}
</body>
</html>