{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <script src="{{ asset('build/react_price_check.js') }}"></script>
    {% endif %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <link href="{{ asset('build/react_price_check.css') }}" rel="stylesheet"/>
    {% endif %}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <div id="react-app"></div>
            {% else %}
                <h1>Please login <a href="{{ path('fos_user_security_login') }}">click here</a></h1>
            {% endif %}
        </div>
    </div>
{% endblock %}
